# Local Development Environment Variables
# Copy this file to .env.local and customize for your local setup

# External Database (Production/Staging) - for extraction
MARIADB_HOST=your-production-db.example.com
MARIADB_PORT=3306
MARIADB_USER=your-extraction-user
MARIADB_PASSWORD=your-extraction-password
MARIADB_OUTPUT_PREFIX=mariadb-extract

# Local Database (for docker-compose)
MYSQL_ROOT_PASSWORD=local-root-password
MYSQL_DATABASE=local-dev-db
MYSQL_USER=local-dev-user
MYSQL_PASSWORD=local-dev-password